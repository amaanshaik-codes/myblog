{
  "name": "thinking-out-loud",
  "private": true,
  "version": "1.0.0",
  "description": "Minimal blog site for Netlify",
  "scripts": {
    "dev": "eleventy --serve",
    "build": "eleventy",
    "generate:favicons": "node scripts/generate-favicons.js",
    "install-geist-fonts": "node scripts/install-geist-fonts.js",
    "images:build": "node scripts/resize-avatar.js",
    "postinstall": "npm run install-geist-fonts || true && npm run generate:favicons || true && npm run images:build || true"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.23",
    "geist": "^1.5.1",
    "markdown-it": "^14.1.0",
    "postcss": "^8.5.6",
    "sharp": "^0.32.0",
    "tailwindcss": "^4.1.18"
  }
}
