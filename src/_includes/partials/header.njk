<header class="site-header">
  <div class="container">
    <div class="header-row">
      <div class="header-left">
        <a class="site-avatar-link" href="/">
          <img class="site-avatar" src="/assets/myface.png" alt="Profile image" loading="lazy" />
        </a>

        <div class="site-meta">
          <h1 class="site-title"><a href="/">{{ site.name }}</a></h1>
          <p class="site-subtitle">{{ site.description }}</p>
        </div>
      </div>

      <button class="theme-toggle" type="button" id="theme-toggle" aria-label="Toggle theme" title="Toggle theme">
        <span class="theme-icon" aria-hidden="true"></span>
      </button>
    </div>
  </div>
</header>
