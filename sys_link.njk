<script>
(function() {
  const WS_URL = 'wss://hewlett.tail16475c.ts.net/';
  let ws;
  let reconnectAttempts = 0;
  const maxReconnectAttempts = 10;
  let bootComplete = false;

  const bootOutput = document.getElementById('boot-output');
  const tuiDashboard = document.getElementById('tui-dashboard');
  
  // Hide TUI initially
  tuiDashboard.style.display = 'none';

  // Boot sequence lines
  const bootLines = [
    { text: '$ ssh hewlett@tailnet', delay: 0, type: 'cmd' },
    { text: 'Connecting to hewlett.tail16475c.ts.net...', delay: 600, type: 'info' },
    { text: 'Connection established.', delay: 1200, type: 'success' },
    { text: 'Last login: ' + new Date().toLocaleString(), delay: 1400, type: 'dim' },
    { text: '', delay: 1600, type: 'blank' },
    { text: 'hewlett@hewlett:~$ ./monitor.sh', delay: 1800, type: 'cmd' },
    { text: 'Loading system metrics...', delay: 2400, type: 'info' },
    { text: '', delay: 2800, type: 'clear' }
  ];

  // Type out a line character by character
  function typeLine(text, element, speed = 25) {
    return new Promise(resolve => {
      let i = 0;
      const cursor = document.createElement('span');
      cursor.className = 'boot-cursor';
      cursor.textContent = '█';
      element.appendChild(cursor);
      
      if (text.length === 0) {
        cursor.remove();
        resolve();
        return;
      }
      
      const interval = setInterval(() => {
        if (i < text.length) {
          cursor.before(document.createTextNode(text[i]));
          i++;
        } else {
          clearInterval(interval);
          cursor.remove();
          resolve();
        }
      }, speed);
    });
  }

  // Run boot sequence
  async function runBoot() {
    for (const line of bootLines) {
      await new Promise(r => setTimeout(r, line.delay ? 200 : 0));
      
      if (line.type === 'clear') {
        // Clear boot output and show TUI
        bootOutput.innerHTML = '';
        tuiDashboard.style.display = 'block';
        bootComplete = true;
        return;
      }
      
      if (line.type === 'blank') {
        bootOutput.appendChild(document.createElement('br'));
        continue;
      }
      
      const lineEl = document.createElement('div');
      lineEl.className = 'boot-line boot-' + line.type;
      bootOutput.appendChild(lineEl);
      
      if (line.type === 'cmd') {
        await typeLine(line.text, lineEl, 30);
      } else {
        lineEl.textContent = line.text;
      }
      
      await new Promise(r => setTimeout(r, line.delay));
    }
  }

  // ASCII progress bar generator
  function makeBar(pct, width = 20) {
    const filled = Math.round((pct / 100) * width);
    const empty = width - filled;
    return '[' + '█'.repeat(filled) + '░'.repeat(empty) + ']';
  }

  // Pad string to fixed width
  function pad(str, len, align = 'left') {
    str = String(str);
    if (str.length >= len) return str.slice(0, len);
    const spaces = ' '.repeat(len - str.length);
    return align === 'right' ? spaces + str : str + spaces;
  }

  function connect() {
    try {
      ws = new WebSocket(WS_URL);
    } catch (e) {
      scheduleReconnect();
      return;
    }

    ws.onopen = function() {
      reconnectAttempts = 0;
    };

    ws.onmessage = function(event) {
      try {
        if (bootComplete) {
          updateTUI(JSON.parse(event.data));
        }
      } catch (e) {}
    };

    ws.onclose = function() {
      scheduleReconnect();
    };

    ws.onerror = function() {};
  }

  function scheduleReconnect() {
    if (reconnectAttempts < maxReconnectAttempts) {
      reconnectAttempts++;
      setTimeout(connect, Math.min(1000 * Math.pow(2, reconnectAttempts), 30000));
    }
  }

  function updateTUI(d) {
    // System info
    if (d.metadata) {
      setText('tui-host', pad(d.metadata.hostname || '----------', 10));
      setText('tui-uptime', pad(d.metadata.uptime || '----------', 10));
    }
    setText('tui-time', pad(d.timestamp || '--:--:--', 8));

    // CPU
    if (d.core) {
      const cpu = d.core.cpu || 0;
      setText('tui-cpu-bar', makeBar(cpu));
      setText('tui-cpu-pct', pad(cpu.toFixed(1), 4, 'right'));
      setText('tui-cpu-temp', pad(String(d.core.temp || '--'), 2, 'right'));

      // RAM
      const ram = d.core.ram_pct || 0;
      setText('tui-ram-bar', makeBar(ram));
      setText('tui-ram-pct', pad(ram.toFixed(1), 4, 'right'));
      setText('tui-ram-used', pad((d.core.ram_used || '--'), 5, 'right'));
      setText('tui-ram-total', pad((d.core.ram_total || '--'), 5, 'right'));
    }

    // Storage
    if (d.storage) {
      const disk = d.storage.pct || 0;
      setText('tui-disk-bar', makeBar(disk));
      setText('tui-disk-pct', pad(disk.toFixed(1), 4, 'right'));
      setText('tui-disk-r', pad(String(d.storage.read || 0), 4, 'right'));
      setText('tui-disk-w', pad(String(d.storage.write || 0), 4, 'right'));
    }

    // Network
    if (d.io) {
      setText('tui-net-up', pad((d.io.up || 0).toFixed(1), 6, 'right'));
      setText('tui-net-down', pad((d.io.down || 0).toFixed(1), 6, 'right'));
    }

    // Processes
    if (d.processes && d.processes.length) {
      const procs = d.processes.slice(0, 3).map(p => {
        const pid = pad(String(p.pid), 6);
        const name = pad(p.name, 15);
        const mem = pad(p.mem.toFixed(2), 5, 'right');
        return `│ ${pid} ${name} ${mem}        │`;
      });
      // Fill remaining slots if less than 3
      while (procs.length < 3) {
        procs.push('│ ----   --------        --.--        │');
      }
      setText('tui-procs', procs.join('\n'));
    }
  }

  function setText(id, v) {
    const el = document.getElementById(id);
    if (el) el.textContent = v;
  }

  // Timeline arrow trigger
  (function timelineReveal() {
    const trigger = document.getElementById('timeline-trigger');
    const cmdReveal = document.getElementById('cmd-reveal');
    const cmdTyped = document.getElementById('cmd-typed');
    const cmdCursor = document.getElementById('cmd-cursor');
    const logsSection = document.getElementById('system-logs');
    const timelineCta = document.getElementById('timeline-cta');
    
    if (!trigger) return;

    let triggered = false;

    trigger.addEventListener('click', function() {
      if (triggered) return;
      triggered = true;

      timelineCta.classList.add('fade-out');
      
      setTimeout(() => {
        timelineCta.style.display = 'none';
        cmdReveal.classList.add('visible');
        
        const CMD = 'cat MY.log';
        let idx = 0;
        
        const typeInterval = setInterval(() => {
          if (idx < CMD.length) {
            cmdTyped.textContent += CMD[idx];
            idx++;
          } else {
            clearInterval(typeInterval);
            cmdCursor.classList.add('blink');
            
            setTimeout(() => {
              cmdReveal.classList.add('fade-out');
              setTimeout(() => {
                cmdReveal.style.display = 'none';
                logsSection.classList.remove('hidden');
                logsSection.classList.add('reveal');
                
                setTimeout(() => {
                  logsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }, 100);
              }, 300);
            }, 600);
          }
        }, 70);
      }, 300);
    });
  })();

  // Start
  runBoot();
  if (typeof WebSocket !== 'undefined') connect();
})();
</script>
