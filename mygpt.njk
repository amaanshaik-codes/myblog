<!-- Model Info Modal -->
<div class="mygpt-modal-overlay" id="mygpt-modal-overlay"></div>
<div class="mygpt-modal" id="mygpt-modal">
  <div class="mygpt-modal-content">
    <button type="button" class="mygpt-modal-close" id="mygpt-modal-close" aria-label="Close modal">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <h2 class="mygpt-modal-title">About this model</h2>
    <div class="mygpt-modal-body">
      <p><strong>Model:</strong> Customized version of Qwen3:1.7B</p>
      <p><strong>Important:</strong> This model can sometimes hallucinate and provide inaccurate information. Please verify important information from reliable sources.</p>
    </div>
    <button type="button" class="mygpt-modal-action" id="mygpt-modal-dismiss">Got it</button>
  </div>
</div>

<div class="mygpt-container">
  <!-- Top spacer to respect safe-area & keep back button clear -->
  <div class="mygpt-top-spacer" aria-hidden="true"></div>

  <!-- Chat Messages -->
  <div class="mygpt-messages" id="mygpt-messages">
    <div class="mygpt-welcome">
      <h1 class="mygpt-welcome-brand">mygpt</h1>
      <p class="mygpt-welcome-description">a self-hosted large language model running on my home server. powered by ollama.</p>
    </div>
  </div>

  <!-- Chat Input -->
  <div class="mygpt-input-wrapper">
    <form class="mygpt-input-form" id="mygpt-form">
      <div class="mygpt-input-controls">
        <button type="button" class="mygpt-clear" id="mygpt-clear" aria-label="Clear conversation" title="Clear">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 6h18"></path>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
          </svg>
        </button>
        <textarea 
          class="mygpt-input" 
          id="mygpt-input" 
          placeholder="message..."
          rows="1"
          autocomplete="off"
          required
        ></textarea>
        <button type="submit" class="mygpt-send" id="mygpt-send" aria-label="Send message">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 2L11 13"/>
            <path d="M22 2L15 22L11 13L2 9L22 2Z"/>
          </svg>
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/assets/mygpt.js" defer></script>
