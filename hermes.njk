<div class="hermes-container">
  <!-- Chat Messages -->
  <div class="hermes-messages" id="hermes-messages">
    <div class="hermes-welcome">
      <p class="hermes-welcome-text">ask hermes anything</p>
      <div class="hermes-prompt-suggestions">
        <button type="button" class="hermes-prompt-btn" data-prompt="explain coffee to someone who never slept">explain coffee to someone who never slept</button>
        <button type="button" class="hermes-prompt-btn" data-prompt="explain cryptocurrency to my grandma">explain cryptocurrency to my grandma</button>
        <button type="button" class="hermes-prompt-btn" data-prompt="what is the capital of paris?">what is the capital of paris?</button>
      </div>
      <button type="button" class="hermes-info-link" id="hermes-info-btn" aria-label="About this model">about this model →</button>
    </div>
  </div>

  <!-- Warning -->
  <div class="hermes-disclaimer">
    small model · may provide inaccurate information
  </div>

  <!-- Chat Input -->
  <div class="hermes-input-wrapper">
    <form class="hermes-input-form" id="hermes-form">
      <textarea 
        class="hermes-input" 
        id="hermes-input" 
        placeholder="message"
        rows="1"
        autocomplete="off"
        required
      ></textarea>
      <div class="hermes-input-actions">
        <button type="submit" class="hermes-send" id="hermes-send" aria-label="Send">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="19" x2="12" y2="5"></line>
            <polyline points="5 12 12 5 19 12"></polyline>
          </svg>
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/assets/hermes.js?v={{ site.assetVersion }}" defer></script>
